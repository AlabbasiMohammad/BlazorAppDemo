@page "/products"
@using BlazorAppDemo.Components.Models
@using BlazorAppDemo.Components.Services
@inject ProductService ProductService
@inject NavigationManager NavigationManager

<h3>Products</h3>

<button class="btn btn-primary" @onclick="CreateNew">Add Product</button>

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in products)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>
                    <button class="btn btn-sm btn-warning" @onclick="() => Edit(p.Id)">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="() => Delete(p.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<Product> products = new();

    protected override void OnInitialized()
    {
        products = ProductService.GetAll();
    }

    void CreateNew() => NavigationManager.NavigateTo("/product-form");

    void Edit(int id) => NavigationManager.NavigateTo($"/product-form/{id}");

    void Delete(int id)
    {
        ProductService.Delete(id);
        products = ProductService.GetAll();
    }
}
